{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "moduleResolution": "bundler",
    "types": ["vite/client"]
  },
  "include": ["src/**/*.js", "src/**/*.svelte"],
  "exclude": ["node_modules/**", ".svelte-kit/**"]
}
